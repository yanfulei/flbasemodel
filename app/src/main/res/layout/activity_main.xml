<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="表单输入组件" />

    <Button
        android:id="@+id/btn_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉刷新组件" />

    <Button
        android:id="@+id/btn_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮组件" />

    <Button
        android:id="@+id/btn_pan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="签字板" />

    <Button
        android:id="@+id/NiceImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NiceImageView原型图片" />

    <Button
        android:id="@+id/btn_scb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SmoothCheckBox复选框" />

    <Button
        android:id="@+id/btn_vea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ValidationEditextActivity" />

    <top.lsmod.basemodel.constom.RequiredTextView
        android:id="@+id/rtv_reque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        app:prefix_text="*" />

    <Button
        android:id="@+id/btn_zhbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="转 换 必 填" />

    <Button
        android:id="@+id/btn_wc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水印相机/录像机" />
</LinearLayout>